<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"> <!-- Sets the character encoding to UTF-8 -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Makes the page responsive -->
  <title>Update Movie</title> <!-- Page title -->
  <link rel="stylesheet" href="/styles.css"> <!-- Link to external CSS file -->
</head>
<body>
  <main>
    <h1>Update Movie</h1> <!-- Heading for the page -->

    <!-- Form to update movie details -->
    <form id="update-movie-form" action="/admin/update-movie/{{movie.id}}" method="POST">
      <!-- Input for the movie title -->
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="{{movie.title}}" required>

      <!-- Input for the movie year -->
      <label for="year">Year</label>
      <input type="number" id="year" name="year" value="{{movie.year}}" required>

      <!-- Input for the movie actors -->
      <label for="actors">Actors</label>
      <input type="text" id="actors" name="actors" value="{{movie.actors}}" required>

      <!-- Input for the movie genre -->
      <label for="genre">Genre</label>
      <input type="text" id="genre" name="genre" value="{{movie.genre}}" required>

      <!-- Input for the movie certification -->
      <label for="certification">Certification</label>
      <input type="text" id="certification" name="certification" value="{{movie.certification}}" required>

      <!-- Input for the age recommendation -->
      <label for="age_recommendation">Age Recommendation</label>
      <input type="text" id="age_recommendation" name="age_recommendation" value="{{movie.age_recommendation}}" required>

      <!-- Input for the image URL -->
      <label for="image_url">Image URL</label>
      <input type="text" id="image_url" name="image_url" value="{{movie.image_url}}" required>

      <!-- Submit button for updating the movie -->
      <button type="submit" class="update-button">Update Movie</button>
    </form>
  </main>

  <!-- JavaScript file for handling update functionality -->
  <script src="/js/update-movie.js"></script>
</body>
</html>
